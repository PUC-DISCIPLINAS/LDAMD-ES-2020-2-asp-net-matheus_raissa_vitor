@model IEnumerable<covid_dashboard_aspnet_core.Models.DataCovid>

@{
    ViewData["Title"] = "Home";
}


<h3 class="text-center">Dashboard</h3>

<table class="table table-striped table-bordered">
    <thead style="color:black">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ConfirmedCase)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Death)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Recovered)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.Country.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfirmedCase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Death)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recovered)
                </td>
            </tr>
        }
    </tbody>
</table>